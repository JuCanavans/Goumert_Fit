<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde"
    android:orientation="vertical"
    tools:context=".Screens.TelaRelatorio">


    <TextView
        android:id="@+id/title_cadastre"
        android:layout_width="242dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="HistÃ³rico"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="Total de Calorias Ingeridas na semana:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/View_CalsTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="Valor do meu IMC:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_IMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Resultado:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_Dica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Quanto ainda posso ingerir:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_q_posso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textMultiLine" />


</LinearLayout>